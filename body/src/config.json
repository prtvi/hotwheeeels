{
	"ENV": "prod",
	"bodyURL": "https://hotwheeeels.netlify.app",
	"engineURL": "https://hotwheeeelsengine.onrender.com",
	"engineURLDev": "http://localhost:3001",
	"maxFileUploadLimit": 5,
	"resultsPerPage": 12,
	"resultsPerPageVertical": 9,
	"logRequests": true,
	"fuseSearchParams": ["carName", "series"],
	"segmentClasses": {
		"mainline": {
			"label": "Mainline",
			"color": "#3498db",
			"avlbl": true
		},
		"themed": {
			"label": "Themed",
			"color": "#03c988",
			"avlbl": true
		},
		"special": {
			"label": "Special feature",
			"color": "#9bec00",
			"avlbl": true
		},
		"premium": {
			"label": "Premium",
			"color": "#ffea20",
			"avlbl": true
		},
		"th": {
			"label": "Treasure hunt",
			"color": "#ff8225",
			"avlbl": true
		},
		"chase": {
			"label": "Chase",
			"color": "#fa4032",
			"avlbl": true
		},
		"sth": {
			"label": "Super treasure hunt",
			"color": "#f6fb7a",
			"avlbl": false
		},
		"rlc": {
			"label": "RLC",
			"color": "#ee202a",
			"avlbl": false
		}
	},
	"formItems": [
		{
			"key": "carName",
			"label": "Name",
			"inputType": "text",
			"required": true,
			"forFormOnly": false,
			"viewSize": "small",
			"maxLength": 48,
			"placeholder": "as on the car",
			"defaultValue": "lamborghini"
		},
		{
			"key": "featuredLink",
			"label": "Featured link",
			"inputType": "text",
			"required": false,
			"forFormOnly": false,
			"viewSize": "small",
			"maxLength": 300,
			"placeholder": "social link",
			"defaultValue": ""
		},
		{
			"key": "brand",
			"label": "Brand",
			"inputType": "datalist",
			"list": [
				"Hot Wheels",
				"Matchbox",
				"Majorette",
				"Mini GT",
				"Maisto"
			],
			"required": true,
			"forFormOnly": false,
			"viewSize": "small",
			"maxLength": 32,
			"placeholder": "hotwheels, matchbox etc",
			"defaultValue": "hot wheels"
		},
		{
			"key": "price",
			"label": "Price ₹",
			"inputType": "number",
			"required": false,
			"forFormOnly": false,
			"viewSize": "small",
			"placeholder": "₹",
			"defaultValue": 249
		},
		{
			"key": "color",
			"label": "Color",
			"inputType": "text",
			"required": false,
			"forFormOnly": false,
			"viewSize": "small",
			"maxLength": 32,
			"placeholder": "color",
			"defaultValue": "red"
		},
		{
			"key": "acquiredDate",
			"label": "Acquired date",
			"inputType": "date",
			"required": true,
			"forFormOnly": false,
			"viewSize": "small",
			"defaultValue": "2023-09-17"
		},
		{
			"key": "segmentClass",
			"label": "Vehicle segment class",
			"inputType": "multioption",
			"list": ["using segmentClasses from above"],
			"required": true,
			"forFormOnly": true,
			"maxLength": 32,
			"viewSize": "small",
			"placeholder": "mainline, themed etc",
			"defaultValue": ["mainline"]
		},
		{
			"key": "series",
			"label": "Series",
			"inputType": "text",
			"required": false,
			"forFormOnly": false,
			"viewSize": "small",
			"maxLength": 32,
			"placeholder": "eg: HW Turbo 8/10",
			"defaultValue": "HW Turbo 8/10"
		},
		{
			"key": "coll",
			"label": "Collection #/250",
			"inputType": "number",
			"required": false,
			"forFormOnly": false,
			"viewSize": "small",
			"placeholder": "eg: 125",
			"defaultValue": "125"
		},
		{
			"key": "baseColorAndType",
			"label": "Base color / type",
			"inputType": "text",
			"required": false,
			"forFormOnly": false,
			"viewSize": "small",
			"maxLength": 32,
			"placeholder": "eg: black/plastic",
			"defaultValue": "black/plastic"
		},
		{
			"key": "vehicleType",
			"label": "Vehicle type",
			"inputType": "datalist",
			"list": ["car", "suv", "tooned", "fantasy", "bike", "van", "truck"],
			"required": false,
			"forFormOnly": false,
			"viewSize": "small",
			"maxLength": 32,
			"placeholder": "car/suv/tooned",
			"defaultValue": "tooned"
		},
		{
			"key": "toy",
			"label": "Toy #",
			"inputType": "text",
			"required": false,
			"forFormOnly": false,
			"viewSize": "small",
			"maxLength": 10,
			"defaultValue": "HVT01",
			"placeholder": "eg: HCT01"
		},
		{
			"key": "cardAvailable",
			"label": "Card available?",
			"inputType": "checkbox",
			"required": false,
			"forFormOnly": false,
			"viewSize": "small",
			"defaultValue": "checked"
		},
		{
			"key": "carded",
			"label": "Still carded?",
			"inputType": "checkbox",
			"required": false,
			"forFormOnly": false,
			"viewSize": "small",
			"defaultValue": "checked"
		},
		{
			"key": "year",
			"label": "Year",
			"inputType": "text",
			"required": false,
			"forFormOnly": false,
			"viewSize": "small",
			"maxLength": 4,
			"placeholder": "2023",
			"defaultValue": "2022"
		},
		{
			"key": "purchasedFromAndOrderNum",
			"label": "Purchased from/order #",
			"inputType": "text",
			"required": false,
			"forFormOnly": false,
			"viewSize": "small",
			"maxLength": 32,
			"placeholder": "store name/order #",
			"defaultValue": "junkieyard / #1841"
		},
		{
			"key": "giftedBy",
			"label": "Gifted by",
			"inputType": "text",
			"required": false,
			"forFormOnly": false,
			"viewSize": "small",
			"maxLength": 32,
			"placeholder": "friend",
			"defaultValue": "Joy"
		},
		{
			"key": "imgs",
			"label": "Upload pictures",
			"inputType": "file",
			"required": true,
			"forFormOnly": true,
			"viewSize": "large"
		},
		{
			"key": "notes",
			"label": "Notes",
			"inputType": "textarea",
			"required": false,
			"forFormOnly": false,
			"viewSize": "large",
			"defaultValue": "My first lamborghini"
		},
		{
			"key": "",
			"label": "",
			"inputType": "btn",
			"required": false,
			"forFormOnly": true,
			"viewSize": "large"
		}
	]
}
